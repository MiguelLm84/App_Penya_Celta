<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="32dp"
    android:layout_marginTop="24dp"
    android:layout_marginEnd="32dp"
    android:layout_marginBottom="24dp"
    android:orientation="vertical"
    tools:context=".ui.ActivityPerfil">

    <TextView
        android:id="@+id/tv_perfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/uncial_antiqua"
        android:text="@string/tv_pantalla_de_perfil_usuario"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#020202"
        android:textSize="20sp"
        android:textStyle="bold" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">

        <ImageView
            android:id="@+id/imageView_fotoSocio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/todo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_teixugos" />

        <ImageButton
            android:id="@+id/btn_editar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="@string/todo"
            app:layout_constrainedHeight="false"
            app:layout_constrainedWidth="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/edit_button" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_titulo_numSocio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/amaranth"
            android:text="@string/tv_titulo_num_socio"
            android:textColor="#020202"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_numSocio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:fontFamily="@font/amaranth"
            android:text="@string/tv_num_socio"
            android:textAlignment="textStart"
            android:textColor="#2979FF"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/tv_titulo_numSocio"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_ap1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:fontFamily="@font/amaranth"
            android:text="@string/tv_first_name"
            android:textAlignment="textStart"
            android:textColor="#2979FF"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/tv_titulo_ap1"
            app:layout_constraintTop_toBottomOf="@+id/tv_nom" />

        <TextView
            android:id="@+id/tv_nom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:fontFamily="@font/amaranth"
            android:text="@string/tv_name"
            android:textAlignment="textStart"
            android:textColor="#2979FF"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/tv_titulo_nom"
            app:layout_constraintTop_toBottomOf="@+id/tv_numSocio"
            tools:ignore="DuplicateIds" />

        <TextView
            android:id="@+id/tv_titulo_nom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:fontFamily="@font/amaranth"
            android:text="@string/tv_nombre"
            android:textColor="#020202"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_titulo_numSocio" />

        <TextView
            android:id="@+id/tv_titulo_ap1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:fontFamily="@font/amaranth"
            android:text="@string/tv_primer_apellido"
            android:textColor="#020202"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_nom" />

        <TextView
            android:id="@+id/tv_titulo_ap2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:fontFamily="@font/amaranth"
            android:text="@string/tv_segundo_apellido"
            android:textColor="#020202"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_titulo_ap1" />

        <TextView
            android:id="@+id/tv_ap2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:fontFamily="@font/amaranth"
            android:text="@string/tv_second_name"
            android:textAlignment="textStart"
            android:textColor="#2979FF"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/tv_titulo_ap2"
            app:layout_constraintTop_toBottomOf="@+id/tv_ap1" />

        <TextView
            android:id="@+id/tv_fechaNaci2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/amaranth"
            android:text="@string/tv_fecha_nacimiento"
            android:textColor="#020202"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_titulo_ap2" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/amaranth"
            android:text="@string/tv_fechaNaci"
            android:textColor="#2979FF"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/tv_fechaNaci2"
            app:layout_constraintTop_toBottomOf="@+id/tv_ap2" />

        <TextView
            android:id="@+id/tv_titulo_tel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:fontFamily="@font/amaranth"
            android:text="@string/tv_num_tel"
            android:textAlignment="textStart"
            android:textColor="#2979FF"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/tv_tel"
            tools:layout_editor_absoluteY="174dp" />

        <TextView
            android:id="@+id/tv_tel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:fontFamily="@font/amaranth"
            android:text="@string/tv_telefono"
            android:textColor="#020202"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_fechaNaci2" />

        <TextView
            android:id="@+id/tv_titulo_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/amaranth"
            android:text="@string/tv_titulo_email"
            android:textColor="#020202"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_tel" />

        <TextView
            android:id="@+id/tv_email_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/amaranth"
            android:text="@string/tv_ejemploEmail"
            android:textAlignment="textStart"
            android:textColor="#2979FF"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/tv_titulo_email"
            app:layout_constraintTop_toBottomOf="@+id/tv_titulo_tel" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_aceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="24dp"
        android:backgroundTint="#00E676"
        android:fontFamily="@font/amaranth"
        android:text="@string/bt_aceptar_perfil"
        android:textColor="#020202"
        android:textSize="15sp"
        android:textStyle="bold" />

</LinearLayout>